<script>
	let TrueAnswers = ["боярышник", "яма", "аванпост", "вапити", "сабля", "арктика", "атлет", "елочка", "канада", "облепиха" ];
	let RegExp = [
		/боярышник/i,
		/яма/i,
		/аванпост/i,
		/вапити/i,
		/сабля/i,
		/арктика/i,
		/атлет/i,
		/елочка/i,
		/канада/i,
		/облепиха/i
	]
	function CheckAnswer(QuestionNumber){
		let Answer="";
		let Questions = document.getElementsByClassName("Question"+[QuestionNumber]);
    	for (i=0; i<Questions.length; i++) {
    	    Answer += Questions[i].value;
		}

		if (Answer.length == Questions.length){
			if(RegExp[QuestionNumber].test(Answer)){
				for (i=0; i<Questions.length; i++) {
    		    	Questions[i].style.backgroundColor = '#00FF7F';
				}
    		} else {
				for (i=0; i<Questions.length; i++) {
    		    	Questions[i].style.backgroundColor = '#FA8072';
				}
			}
		}
	}
</script>
